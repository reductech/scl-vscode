{
    "name": "reductech-scl",
    "publisher": "Reductech",
    "displayName": "SCL",
    "repository": "https://gitlab.com/reductech/edr/scl-vscode",
    "description": "Language Extension for SCL",
    "keywords" : [
        "Reductech", "SCL", "Forensics", "eDiscovery"
    ],
    "icon": "Reductech-Icon-Small.png",
    "galleryBanner": {
        "color": "#244B5C",
        "theme": "dark"
      },
    "version": "0.0.2",
    "engines": {
        "vscode": "^1.53.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:scl"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [
            {
                "id": "scl",
                "aliases": [
                    "SCL",
                    "scl"
                ],
                "extensions": [
                    ".scl"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "scl",
                "scopeName": "source.scl",
                "path": "./syntaxes/scl.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "webpack --mode production",
        "webpack": "webpack --mode development",
        "webpack-dev": "webpack --mode development --watch",
        "test-compile": "tsc -p ./",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "@types/node": "^8.10.25",
        "ts-loader": "^8.0.17",
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "vscode-jsonrpc": "^4.0.0",
        "vscode-languageclient": "^5.1.1",
        "webpack": "^5.24.3",
        "webpack-cli": "^4.5.0"
    }
}
