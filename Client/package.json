{
  "name": "reductech-scl",
  "publisher": "reductech",
  "displayName": "Reductech SCL",
  "description": "Sequence Configuration Language extension for syntax highlighting, auto-completion and error diagnostics.",
  "version": "0.10.0",
  "preview": true,
  "license": "Apache-2.0",
  "homepage": "https://gitlab.com/reductech/edr/scl-vscode",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/reductech/edr/scl-vscode.git"
  },
  "bugs": {
    "url": "https://gitlab.com/reductech/edr/scl-vscode/-/issues"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "forensics",
    "ediscovery",
    "automation",
    "orchestration",
    "edrm"
  ],
  "icon": "images/Reductech-Icon-Small.png",
  "galleryBanner": {
    "color": "#383838",
    "theme": "dark"
  },
  "activationEvents": [
    "onLanguage:scl",
    "onCommand:reductech-scl.run"
  ],
  "main": "./out/extension",
  "contributes": {
    "languages": [
      {
        "id": "scl",
        "aliases": [
          "SCL",
          "scl"
        ],
        "extensions": [
          ".scl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "scl",
        "scopeName": "source.scl",
        "path": "./syntaxes/scl.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "Reductech SCL",
      "properties": {
        "reductech-scl.edr.path": {
          "description": "Path to EDR executable. Enables running Sequences from file or selection.",
          "type": "string",
          "format": "path"
        },
        "reductech-scl.edr.launchdebugger": {
          "description": "Whether to launch the Visual Studio Debugger when the extension starts.",
          "type": "boolean",
          "default": true
        },
        "reductech-scl.edr.connectors": {
          "description": "The connector configuration to be used with EDR.",
          "type": "object"
        }
      }
    },
    "configurationDefaults": {
      "[scl]": {
        "editor.wordWrap": "off",
        "editor.tabSize": 2,
        "editor.insertSpaces": true
      }
    },
    "commands": [
      {
        "command": "reductech-scl.run",
        "category": "SCL",
        "title": "Run Sequence",
        "enablement": "editorLangId == scl && config.reductech-scl.edr.path"
      }
    ],
    "keybindings": [
      {
        "command": "reductech-scl.run",
        "key": "F5",
        "when": "editorLangId == scl && config.reductech-scl.edr.path"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "package-ci": "vsce package --out ./reductech-scl.vsix",
    "publish": "vsce publish",
    "publish-ci": "vsce publish --packagePath ./reductech-scl.vsix",
    "update-vscode": "node ./node_modules/vscode/bin/install"
  },
  "engines": {
    "vscode": "^1.52.0"
  },
  "dependencies": {
    "vscode-languageclient": "^7.0.0"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "14.x",
    "@types/vscode": "^1.52.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vsce": "^1.92.0",
    "vscode-test": "^1.5.0"
  }
}
